{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: driver",
            "type": "debugpy",
            "request": "launch",
            "program": "driver.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}
